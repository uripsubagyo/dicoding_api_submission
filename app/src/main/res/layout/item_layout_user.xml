<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardview_light_background"
>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

        <ImageView
                android:id="@+id/img_item_photo"
                android:layout_width="88dp"
                android:layout_height="87dp"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"/>

        <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="237dp"
                android:layout_height="45dp"
                android:layout_toEndOf="@id/img_item_photo"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/app_name"
                tools:ignore="MissingConstraints" android:layout_marginStart="18dp"
                app:layout_constraintStart_toEndOf="@+id/img_item_photo" android:layout_marginEnd="104dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="44dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="0.057"
                app:layout_constraintVertical_bias="0.562"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>